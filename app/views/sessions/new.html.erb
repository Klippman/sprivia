<div id="background_sessions">  
    <nav id="nav_menu_sess">
        <ul id="sess_login">
            <li class="sessions_new"><a href="/users">HOME</a></li>
        </ul>
    </nav>
    <div id="login_canvas">
        <div id="group_login">
            <h1 id="create_acct">ENTER CREDENTIALS!</h1>
            <div id="login">
                <%= form_tag(sign_in_path, method: "post") do %>
                <%= label_tag(:email) %>
                <%= text_field_tag(:email, nil, :required => true) %>
                <%= label_tag(:password) %>
                <%= password_field_tag(:password, nil, :required => true) %>
                <%= submit_tag("Login") %>
                <% end %>
            </div>
        </div>
    </div>  
</div>
