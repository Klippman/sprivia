<div id="background_sessions">  

    <nav id="nav_menu">
        <ul id="sess_login">
            <li class="sessions"><a href="/users">HOME</a></li>
        </ul>
    </nav>

    <div id="login">
        <%= form_tag(sign_in_path, method: "post") do %>
        <%= label_tag(:email) %>
        <%= text_field_tag(:email, nil, :required => true) %>
        <%= label_tag(:password) %>
        <%= password_field_tag(:password, nil, :required => true) %>
        <%= submit_tag("Login") %>
        <% end %>
    </div>
</div>
