<%= form_for @user do |f| %>
  <%= f.label :name, {class: 'label'} %>
  <%= f.text_field :name, {required: true, class: 'field'} %>
  <%= f.label :email, {class: 'label'} %>
  <%= f.text_field :email, {required: true, class: 'field'} %>
  <%= f.label :nickname, {class: 'label'} %>
  <%= f.text_field :nickname, {required: true, class: 'field'} %>
  <%= f.label :password, {class: 'label'} %>
  <%= f.password_field :password, {required: true, class: 'field'} %>
  <%= f.submit class: 'button' %>
<% end %>