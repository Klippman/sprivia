<body id="post_show_body">
    <div id="post_show_div_parent">
            <div id="post_border_box">
                <span><h3>Post:</h3> <h4><%= @post.entry %></h4></span>
                </br>
                <span><h3>Posted by:</h3> <h4><%= @post.user.name %></h4></span>
            </div>

        <div id="comment_div">
            <% @post.comments.each do |c| %>
            <span><h3>Comment:</h3> <h4><%= c.body %></h4></span>
            <% end %>
        </div>
    </div>

    <nav id="post_nav">
        <div id="post_links">
            <%= link_to("Edit Post", edit_post_path(@post), {class: 'link'}) %>
            <%= link_to("Delete Post", @post, {method: 'delete', class: 'link'}) %>
            <%= link_to("Add Comment", new_comment_path(post_id: @post.id), {class: 'link'})%>
            <%= link_to("Profile", user_path, {method: :get, class: 'link'})%>
        </div>
    </nav>
</body>
